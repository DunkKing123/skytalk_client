<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingStart="@dimen/len_8"
    android:paddingTop="@dimen/len_8">

    <com.thxy.common.widget.PortraitView
        android:layout_gravity="top"
        android:paddingTop="@dimen/len_8"
        android:id="@+id/pv_user_chat_cell"
        android:layout_width="@dimen/len_40"
        android:layout_height="@dimen/len_40"
        android:padding="1px"
        android:src="@mipmap/ic_launcher_round"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
        tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_margin="@dimen/len_2"
            android:background="@drawable/bg_chat_left"
            android:id="@+id/tv_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:minHeight="@dimen/len_24"
            android:padding="@dimen/len_10"
            android:paddingStart="@dimen/len_16"
            android:text="哈哈"
            android:maxWidth="@dimen/len_256"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white" />

</LinearLayout>